NAME=simpleflooding
#RADIO=shadowing
RADIO=tworayground
RADIO_OPTIONS="FADING=ricean PATHLOSS_EXP=0 SHADOWING_STD_DB=0 SHADOWING_INIT_STD_DB=0 SHADOWING_PATHLOSS_MODEL=default RICEAN_MAX_VELOCITY=2.5 RICEAN_K=6"

NAME2MAC=yes

#DISABLE_NAM=1
DISABLE_TRACE=1

TIME=FLOWTIME

NODEPLACEMENTFILE=4nodes.plm
NODETABLE=flooding.mes
NODEPLACEMENT=file

LOGDIR=WORKDIR
LOGFILE=measurement.log

RESULTDIR=WORKDIR
EVALUATIONSDIR=WORKDIR/evaluation
EVALUATION="network_info flooding_info flow_info"

GPS=no
NOTICE=no
LOS=no

CONTROLSOCKET=yes

USE_SINGLE_CLICKFILE=1
